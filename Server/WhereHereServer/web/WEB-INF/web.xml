<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Apache-Axis</display-name>
    <servlet>
        <servlet-name>GetInformController</servlet-name>
        <servlet-class>com.jinseong.soft.server.controller.GetInformController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetInformController</servlet-name>
        <url-pattern>/getinfo.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WritePostController</servlet-name>
        <servlet-class>com.jinseong.soft.server.controller.WritePostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WritePostController</servlet-name>
        <url-pattern>/writepost.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WriteCommentController</servlet-name>
        <servlet-class>com.jinseong.soft.server.controller.WriteCommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WriteCommentController</servlet-name>
        <url-pattern>/writecomment.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetPostController</servlet-name>
        <servlet-class>com.jinseong.soft.server.controller.GetPostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPostController</servlet-name>
        <url-pattern>/getpost.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCommentController</servlet-name>
        <servlet-class>com.jinseong.soft.server.controller.GetCommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCommentController</servlet-name>
        <url-pattern>/getcomment.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>Apache-Axis Servlet</display-name>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>Axis Admin Servlet</display-name>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AdminServlet</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet>
        <display-name>SOAPMonitorService</display-name>
        <servlet-name>SOAPMonitorService</servlet-name>
        <servlet-class>org.apache.axis.monitor.SOAPMonitorService</servlet-class>
        <init-param>
            <param-name>SOAPMonitorPort</param-name>
            <param-value>5101</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/servlet/AxisServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>*.jws</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SOAPMonitorService</servlet-name>
        <url-pattern>/SOAPMonitor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/servlet/AdminServlet</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
</web-app>